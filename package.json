{
  "name": "nyaa-watcher-ui",
  "module": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run build && concurrently \"bun --watch src/server.ts\" \"bunx @tailwindcss/cli -i ./globals.css -o ./public/css/styles.css --watch\"",
    "copy:basecoat": "bun -e \"await Bun.write('public/js/basecoat.js', Bun.file('node_modules/basecoat-css/dist/js/all.min.js'))\"",
    "copy:htmx": "bun -e \"await Bun.write('public/js/htmx.js', Bun.file('node_modules/htmx.org/dist/htmx.min.js'))\"",
    "build:css": "bunx @tailwindcss/cli -i ./globals.css -o ./public/css/styles.css --minify",
    "build": "bun run copy:basecoat && bun run copy:htmx && bun run build:css",
    "start": "bun run build && bun src/server.ts",
    "test": "bun test"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/static": "^8.3.0",
    "@jhxdev/fastify": "^0.1.2",
    "basecoat-css": "^0.3.10",
    "cheerio": "^1.1.2",
    "fastify": "^5.7.1",
    "fastify-plugin": "^5.1.0",
    "htmx.org": "2.0.8",
    "octokit": "^5.0.5",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "peerDependencies": {
    "typescript": "latest"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/bun": "latest",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.18"
  }
}
